<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/toolbar_changepassword"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:src="@drawable/changepassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairo_bold"
            android:gravity="center_horizontal"
            android:text="Change your  Password"
            android:textColor="#11533B"
            android:textSize="@dimen/_19ssp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairo"
            android:gravity="center_horizontal"
            android:text="Your identity has been verified set your new "
            android:textColor="#969494"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairo"
            android:gravity="center_horizontal"
            android:text="password"
            android:textColor="#969494"
            android:textSize="@dimen/_10ssp" />

        <EditText
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/bg_password"
            android:drawableLeft="@drawable/password_icon_newpassword"
            android:drawableRight="@drawable/happy_icon"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"

            android:hint="Old password"
            android:paddingStart="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp" />

        <EditText
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/bg_password"
            android:drawableLeft="@drawable/password_icon_newpassword"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Password"
            android:drawableRight="@drawable/happy_icon"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"

            android:paddingRight="@dimen/_10sdp" />

        <EditText
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/bg_password"
            android:drawableLeft="@drawable/password_icon_newpassword"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Confirm Password"
            android:drawableRight="@drawable/happy_icon"
            android:layout_marginTop="@dimen/_15sdp"

            android:paddingStart="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/welcome"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/cairo_bold"
            android:text="Save"
            android:background="@drawable/custome_button_green"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>