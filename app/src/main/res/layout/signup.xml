<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/signup_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"

                    android:fontFamily="@font/roboto"
                    android:paddingLeft="@dimen/_15sdp"
                    android:text="Sign up"
                    android:textColor="#000000"
                    android:textSize="@dimen/_18ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="@dimen/_15sdp"
                    android:text="Create a free account"
                    android:textColor="#707070"
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/backto_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="Back to login"
                    android:textColor="#2A76BA"
                    android:textSize="@dimen/_15ssp" />

                <View
                    android:layout_width="@dimen/_88sdp"
                    android:layout_height="1dp"
                    android:layout_gravity="start"
                    android:background="#2A76BA" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
android:id="@+id/name_input"
            android:background="@drawable/bg_password"
            android:hint="Name"
            android:fontFamily="@font/roboto"
            android:paddingLeft="@dimen/_9sdp"
            app:boxStrokeColor="#2A76BA"
            app:hintTextColor="#2A76BA" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/bg_password"
            android:hint="Email Adress"
            android:id="@+id/email_input"
            android:paddingLeft="@dimen/_9sdp"
            android:fontFamily="@font/roboto"
            app:boxStrokeColor="#2A76BA"
            app:hintTextColor="#2A76BA" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/bg_password"
            android:fontFamily="@font/roboto"
            android:hint="Phone number"
            android:id="@+id/phone_input"
            android:paddingLeft="@dimen/_9sdp"
            app:boxStrokeColor="#2A76BA"
            app:hintTextColor="#2A76BA" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/bg_password"
            android:drawableRight="@drawable/visibilty"
            android:hint="password"
            android:id="@+id/password_input"
            android:paddingLeft="@dimen/_9sdp"
            android:paddingRight="@dimen/_10sdp"
            android:fontFamily="@font/roboto"
            app:boxStrokeColor="#2A76BA"
            app:hintTextColor="#2A76BA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_2sdp"

            android:layout_marginLeft="@dimen/_10sdp"
            android:text="The password must be between 4 and 6 characters"
            android:textColor="#969494"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_10ssp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/bg_password"
            android:drawableRight="@drawable/visibilty"
            android:hint="Retype password"
            android:id="@+id/retypepassword_input"
            android:paddingLeft="@dimen/_9sdp"
            android:paddingRight="@dimen/_10sdp"
            app:boxStrokeColor="#2A76BA"
            android:fontFamily="@font/roboto"
            app:hintTextColor="#2A76BA" />

        <Button
            android:id="@+id/welcome"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/custome_button_green"
            android:fontFamily="@font/cairo_bold"
            android:text="Sign UP"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Or Sign up with "
            android:textColor="#000000"
            android:fontFamily="@font/cairo_bold"
            android:textSize="@dimen/_15ssp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
            android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/face_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/google_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/face_icon"/>


        </LinearLayout>
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairo_semibold"
            android:text="Back"
            android:textColor="#969494"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>
</LinearLayout>